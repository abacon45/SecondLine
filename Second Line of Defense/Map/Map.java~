public class Map {
  int x, y;
  EntryPoint[] entryPoints;
  
  public Map(int x, int y) {
    this.x = x;
    this.y = y;
  }
  
  public int[] heartLocation() {
    int[] heartLocation = new int[] {x / 2, y - 5};
    return heartLocation;
  }
  
  public void initEntryPoint(int x, y) {
    entryPoints = new EntryPoint[1];
    EntryPoint e = new EntryPoint(x, y);
    entryPoints[0] = e;
  }
  
  public void initMultipleEntryPoints(int x1, y1, x2, y2) {
    entryPoints = new EntryPoint[2];
    EntryPoint e = new EntryPoint(x1, y1);
    EntryPoint f = new EntryPoint(x2, y2);
    entryPoints[0] = e;
    entryPoints[1] = f;
  }
  
  public int[] entryPoint() {
    int[] entryPoint = new int[] {x, 5};
    return entryPoint;
  }
}
